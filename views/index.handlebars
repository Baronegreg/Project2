{{#each adoptablePets}}
{{#unless this.adopted}}

<form id="petAdopted" class="create-update-form" action="/?_method=PUT" method="POST">
<li>
<input type="hidden" name="adopted" value="true">
{{this.id}}. ({{this.name}}  | {{this.animal}})
<input type='hidden' name="this" value="{{this.id}}">
<input type="submit" name="submit" id="submit" class="btn-primary btn" value="Click when {{this.name}} is ADOPTED">
</li><br>
</form>

{{/unless}}
{{/each}}



