{{#each animal}}
<div class="row">
    <div class="col-sm-2">
         <center><h6 class="title">Meet {{name}}</h6></center>
         <img id="poodle" class="img-top" src="{{media}}" alt="poodle">
    </div>
    <div id="petInfo">
          <div class="col-sm-3">
               <table border="1" width="100%">
                   <tr>
                        <td class="colOne" id="Type">Type:</td><td class="colTwo">{{animal}}</td>
                   </tr>
                        <td class="colOne" id="Name">Name:</td><td class="colTwo">{{name}}</td>
                   <tr>
                        <td class="colOne" id="Breed">Breed:</td><td class="colTwo">{{breeds}}</td>
                   </tr>
                        <td class="colOne" id="Age">Age:</td><td class="colTwo">{{age}}</td>
                   </tr>
                   <tr>
                        <td class="colOne" id="Gender">Gender:</td><td class="colTwo">{{sex}}</td>
                </table>
            </div>
         </div>
         <div class="col-sm-5">
                <h4 class="title">Description</h4>
                <p class="text">{{description}}</p>
         </div>
    </div>
</div>
{{/each}}
</div>

